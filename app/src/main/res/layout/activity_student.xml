<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StudentActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tvWelcomeStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido Student"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            />

        <ImageView
            android:id="@+id/ivStudent"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            app:srcCompat="@drawable/student"
            android:layout_marginBottom="100dp"
            />

        <Button
            android:id="@+id/btnVisualizarAcademias"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:text="Visualizar Academias"
            android:textAlignment="center"
            android:layout_gravity="center"

            />

        <Button
            android:id="@+id/btnViewAllCourses"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Visualizar todos los cursos" />

        <Button
            android:id="@+id/btnViewCoursesEnrolled"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:text="Visualizar cursos matriculados"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            />

        <Button
            android:id="@+id/btnStudenLogOut"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>