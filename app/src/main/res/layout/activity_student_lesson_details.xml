<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StudentLessonDetails">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tvDetailsLesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles Leccion"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"

            />

        <TextView
            android:id="@+id/tvDateLesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha"
            android:layout_margin="30dp"
            android:background="@drawable/border"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            android:textSize="17dp"

            />

        <TextView
            android:id="@+id/tvHourLesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora"
            android:layout_margin="30dp"
            android:background="@drawable/border"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            android:textSize="17dp"

            />

        <TextView
            android:id="@+id/tvclassroomLesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Aula"
            android:layout_margin="30dp"
            android:background="@drawable/border"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            android:textSize="17dp"

            />

        <Button
            android:id="@+id/btnBackDetailsLesson"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:layout_gravity="center"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>